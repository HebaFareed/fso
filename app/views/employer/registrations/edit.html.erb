<div class="page-head">
  <div class="content">
  <div class="breadcrumbs"> <h4>تسجيل حساب الشركة</p></div>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
  <div class="sign-progress">



      <!-- Nav tabs -->
      <ul class="nav" role="tablist">
        <li role="presentation" class="active"><a href="#contact_info" aria-controls="contact_info" role="tab" data-toggle="tab">١</a></li>
        <span class="split "></span>
        <li role="presentation"><a href="#company_info" aria-controls="company_info" role="tab" data-toggle="tab">٢</a></li>
        <span class="split"></span>
        <li role="presentation"><a href="#job_internship" aria-controls="job_internship" role="tab" data-toggle="tab">٣</a></li>
      </ul>



  </div>
</div>
</div>
</div>
</div>



<div class="company-sign-up content">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
<%= devise_error_messages! %>

<!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="contact_info">
      <h2>المعلومات الشخصية</h2>
      <div class="form col-md-6 col-md-offset-3">
      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :first_name, autofocus: true, :class=>"form-control", :placeholder=>"الاسم الأول" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :second_name, autofocus: true, :class=>"form-control", :placeholder=>"اسم العائلة" %>
        </div>

      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"البريد الإلكتروني" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.password_field :password, autofocus: true, :class=>"form-control", :placeholder=>"كلمة السر" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.text_field :phone, autofocus: true, :class=>"form-control", :placeholder=>"رقم التليفون" %>
        </div>
      </div>

    </div>
  </div>

  <div role="tabpanel" class="tab-pane" id="company_info">


    <h2>معلومات الشركة</h2>
    <div class="form col-md-6 col-md-offset-3">

      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :co_name, autofocus: true, :class=>"form-control", :placeholder=>"اسم الشركة" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :co_type, autofocus: true, :class=>"form-control", :placeholder=>"نوع الشركة" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :co_address, autofocus: true, :class=>"form-control", :placeholder=>"عنوان الشركة" %>
        </div>
        <div class="col-md-12">
          <%= f.text_area :co_desc, autofocus: true, :class=>"form-control", :placeholder=>"وصف الشركة" %>
        </div>
      </div>
    </div>

  </div>

  <div role="tabpanel" class="tab-pane" id="job_internship">


    <h2>إضافة وظيفة\تدريب</h2>
    <div class="form col-md-6 col-md-offset-3">
      <%= f.fields_for :job do |builder| %>
        <%= render "job_fields", :f => builder %>
      <% end %>
      <div class="col-sm-3 col-sm-offset-9"><%= link_to_add_association 'أضف وظيفة', f, :job, class: "btn btn-block btn-danger" %></div>

      <%= f.fields_for :internship do |builder| %>
        <%= render "internship_fields", :f => builder %>
      <% end %>
        <div class="col-sm-3 col-sm-offset-9"><%= link_to_add_association 'أضف تدريب', f, :internship, class: "btn btn-block btn-danger" %></div>
    </div>

  </div>


</div>

<div class="row">
<div class="col-md-2 col-md-offset-8"><%= f.submit "سجل", :class=>"btn btn-block btn-danger" %></div>
</div>

<% end %>

</div>
