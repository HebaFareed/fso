    <!-- Wrap the rest of the page in another container to center all the content. -->
<div class="main-page">
    <div class="marketing">
<div class="row">
    <h2>الوظائف المميزة</h2>
      <!-- Three columns of text below the carousel -->
    <% if @jobs %>
      <%= render "/jobs/job_list"%>

      <div class="col-md-2 col-md-offset-5"><a href="<%= jobs_path%>" class="btn btn-lg btn-danger btn-block">المزيد</a></div>
    </div>


    <% else %>
          <div class="empty-content">
            <h1>لم تسجل أي وظيفة بعد. <%= link_to "أضف وظيفة جديدة", new_job_path %></h1>
          </div>
    <%end%>


  </div>

</div>

<div class="reviews text-center">
  <h2>ماذا قال عملاؤنا؟</h2>
<% if @testmonials %>
	<div class="[ row ]">
		<div class="[ col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 ]" role="tabpanel">
            <div class="[ col-xs-4 col-sm-12 ]">
                <!-- Nav tabs -->
                <ul class="[ nav nav-justified ]" id="nav-tabs" role="tablist">

                  <% @testmonials.each do |testmonial| %>
                    <li role="presentation" <%= 'class="active"' if @testmonials.first == testmonial %>>
                        <a href="#testmonial_<%= testmonial.id%>" aria-controls="testmonial_<%= testmonial.id%>" role="tab" data-toggle="tab">
                            <% if testmonial.logo != "" %><img class="img-circle" src="<%= testmonial.logo %>" /><%else%> <i class="fa fa-user"></i><%end%>
                            <span class="quote"><i class="fa fa-quote-left"></i></span>
                        </a>
                    </li>
                    <%end%>
                </ul>
            </div>
            <div class="[ col-xs-8 col-sm-12 ]">
                <!-- Tab panes -->
                <% @testmonials.each do |testmonial| %>
                <div class="tab-content" id="tabs-collapse">
                    <div role="tabpanel" class="tab-pane  <%= 'active' if @testmonials.first == testmonial %>" id="testmonial_<%= testmonial.id%>">
                        <div class="tab-inner">
                            <% if testmonial.quote %><p class="lead"> <%= testmonial.quote %></p><%end%>
                            <hr>
                            <% if testmonial.name %><p><strong class="text-uppercase"><%= testmonial.name %></strong></p><%end%>
                            <% if testmonial.company %><p><em class="text-capitalize"><%= testmonial.company %></p><%end%>
                        </div>
                    </div>
                    <%end%>
                </div>
            </div>
        </div>
	</div>
  <%else%>
<h1>  ليس هناك عملاء بعد!</h1>
<%end%>

</div>

