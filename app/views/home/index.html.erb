                        <a href="<%= new_applicant_registration_path %>" class="btn btn-block btn-lg btn-danger">سجل</a>
                      </div>
                    </div>
                  </div>



          </div>
        </div>
          </div>
  </div>

</div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function($) {
        $('select#search_model').change( function() {
           if ($(this).val() == "applicant") {
               $('form#applicant').show();
               $('form#job').hide();

           }
            else {
               $('form#applicant').hide();
               $('form#job').show();

            }
        });



    });
</script>
