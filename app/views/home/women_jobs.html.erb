<% title "وظائف للسيدات فقط"%>
<div class="search-job-filter female">
  <div class="content">
      <h2>وظائف للسيدات فقط</h2>
  <div class="row">
        <%= search_form_for @q do |f| %>
      <div class="col-md-1"><p>بحث حسب:</p></div>
    <div class="col-md-10">
<div class="col-md-3">
              <%= f.search_field :place_cont, :class=>"form-control", :placeholder=>"المدينة" %>
</div>
        <div class="col-md-3">
          <%= f.search_field :field_cont, :class=>"form-control", :placeholder=>"المجال" %>
        </div>

        <div class="col-md-3">
          <%= f.select(:applicant_status_cont, [["خريج حديث", "fresh-graduate"], ["صاحب خبرة","experienced"]], {include_blank: 'الحالة'}, {:class =>'form-control job_condition'})%>
        </div>

        <div class="col-md-3">
          <%= f.search_field :description_cont, :class=>"form-control", :placeholder=>"بحث متقدم" %>
        </div>
</div>
<div class="col-md-1"><%= f.submit "بحث", :class => "btn btn-block btn-danger" %></div>
      <%end%>
  </div>
</div>
</div>

  <div class="content job-filter">

    <% if @jobs.count > 0 %>
      <%= render "/jobs/job_list" %>
    <% else %>
          <div class="empty-content">
            <h1>لم تسجل أي وظيفة بعد. <%= link_to "أضف وظيفة جديدة", new_job_path %></h1>
          </div>
    <%end%>


  </div>
