<div class="nested-fields">
    <h2>خبرة جديدة<span style="font-size:2rem;">(<%= link_to_remove_association "حذف", f %>)</span></h2>

    <div class="row">
              <div class="col-md-6">
                <%= f.text_field :title, autofocus: true, :class=>"form-control", :placeholder=>"المسمى الوظيفي" %>
              </div>
              <div class="col-md-6">
                <%= f.text_field :company, autofocus: true, :class=>"form-control", :placeholder=>"الشركة" %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <%= f.text_field :period, autofocus: true, :class=>"form-control", :placeholder=>"المدة" %>
              </div>
              <div class="col-md-12">
                <%= f.text_area :description, autofocus: true, :class=>"form-control", :placeholder=>"الوصف" %>
              </div>
            </div>
</div>
