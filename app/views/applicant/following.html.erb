 <div class="breadcrumps"><div class="content"> <%= link_to "الصفحة الشخصية", applicant_path(current_applicant) %> / <p>الطلبات المقدمة</p> </div></div>
<div class="page-head content"><div class="row">
    <div class="col-md-3 pull-left">
        <%= link_to "تصفح الوظائف", jobs_path, :class => "btn btn-block btn-danger"  %>
    </div>
    </div>
    </div>
  <div class="content job-filter">

      <div class="row">
      <!-- Three columns of text below the carousel -->
      <div class="row job-list">

<% if @applicant_following.any? %>
    <% @applicant_following.each do |job| %>

        <div class="col-md-3">
                <div class="job-item">
          <div class="row">
            <div class="col-md-3">
              <div class="job-pic"></div>
            </div>
            <div class="col-md-8">
              <div class="job-title">
                <a href="<%= job_path(:employer_id) %>" class="employee"> <%= job.title %></a>
                <a href=" <%= employer_path(:employer_id) %>" class="employer danger"><%= job.employer.co_name %></a>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="job-conditions col-md-12">
              <p><%= job.place %></p>
              <p><%= job.experience %></p>
            </div>
          </div>
          <div class="row">
            <div class="job-description">
                <p> <%= job.description %> </p>
            </div>
          </div>
          <div class="row">
            <% if applicant_signed_in? %>
             <div class="col-md-6"> <%= link_to "استعراض",  job_path(job), :method => :post, :class => "btn btn-block btn-primary" %></div>
              <% elsif employer_signed_in? %>
                <% if job.employer == current_employer %>
                    <div class="col-md-6"><%= link_to "تعديل", edit_job_path(job), :class => "btn btn-block btn-primary" %></div>
                    <%end%>
              <% else %>
              
                <div class="col-md-6"> <%= link_to "قدم", new_applicant_registration_path, :class => "btn btn-block btn-primary" %></div>
              <%end%>
            <div class="col-md-6"> <div class="btn btn-block btn-primary">مشاركة</div></div>
          </div>
        </div>
        </div><!-- /job item -->
          
            <%end%>
        <%else%>
            <div class="empty-content">
            <h1>لم تتقدم لأي وظيفة بعدد. <%= link_to "تصفح الوظائف", jobs_path %></h1>
          </div>
        <%end%>

  </div>
</div>
</div>
