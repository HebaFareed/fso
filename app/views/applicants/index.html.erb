<% title "باحثي العمل"%>
<div class="search-job-filter">
  <div class="content">
      <h2>باحثي العمل</h2>
    <div class="row">
          <%= search_form_for @q do |f| %>
        <div class="col-md-1"><p>بحث حسب:</p></div>
      <div class="col-md-10">
<div class="col-md-4">
                <%= f.search_field :city_cont, :class=>"form-control", :placeholder=>"المدينة" %>
</div>
          <div class="col-md-4">
            <%= f.search_field :education_field_cont, :class=>"form-control", :placeholder=>"المجال" %>
          </div>
          <div class="col-md-4">
            <%= f.search_field :skill_skill_or_experience_description_cont, :class=>"form-control", :placeholder=>"بحث متقدم" %>
          </div>
</div>
<div class="col-md-1"><%= f.submit "بحث", :class => "btn btn-block btn-danger" %></div>
        <%end%>
    </div>
  </div>
</div>
  <div class="content job-filter">


          <% if @applicants.any? %>

      <div class="row">
      <!-- Three columns of text below the carousel -->
      <div class="row job-list">

      <% @applicants.each do |applicant| %>
        <div class="col-md-3">
        <div class="job-item <%= applicant.status %>">
          <div class="row">
            <div class="col-md-4">
              <div class="job-pic"><% if applicant.avatar? %><%= image_tag applicant.avatar.url() %> <% else %><i class="fa fa-user"></i> <%end%> </div>
            </div>
            <div class="col-md-7">
              <div class="job-title">
                <a href="<%= applicant_path(applicant)%>" class="employee"><% if applicant.sex == "male" %> <i class="fa fa-male"></i> <% else %> <i class="fa fa-female"></i> <% end %> <%= applicant.first_name %> <%= applicant.second_name %></a>
                <a href="#" class="employer danger"><% if applicant.status == "fresh-graduate" %>خريج<% elsif applicant.status == "experienced"%>صاحب خبرة <%end%></p</a>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="job-conditions col-md-12">
              <p><%= applicant.city%></p>
<% if applicant.education[0] %>              <p><%= applicant.education[0].degree %> <%= applicant.education[0].field %> - <%= applicant.education[0].graduation_place %> </p>
              <p> <%= applicant.education[0].graduation_year %></p><%end%>
            </div>
          </div>
          <div class="row">
            <div class="job-description col-md-12"></span>

                  <% skills = applicant.skill %>
              <% if skills.any? %>
                <% skills.each do |ski| %>
                    <span class="label label-primary"><%= ski.skill %></span>
                <%end%>
                <% end %>


            </div>
          </div>
          <div class="row">
            <% if applicant.paid_account %>
              <div class="col-md-6"><a class="btn btn-block btn-danger" href="#" data-toggle="modal" data-target="#contact">بيانات التواصل</a></div>
              <% elsif employer_signed_in? %>
                <% if current_employer.paid_account %>
                 <div class="col-md-6"><a class="btn btn-block btn-danger" href="#" data-toggle="modal" data-target="#contact">بيانات التواصل</a></div>
                <%end%>
                  <% end%>
              <!-- Modal -->
<div class="modal fade" id="contact" tabindex="-1" role="dialog" aria-labelledby="contact" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">بيانات التواصل</h4>
      </div>
      <div class="modal-body">
        <label>البريد  الإلكتروني </label><p><%= applicant.email %></p>

        <label>رقم التليفون</label><p><%= applicant.phone%></p>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
            <div class="col-md-6"> <%= link_to "المزيد", applicant_path(applicant), :class => "btn btn-block btn-danger" %> </div>
          </div>
        </div>
        </div><!-- /job item -->

      <%end%>
    </div>
    </div>
<%else%>
          <div class="empty-content">
            <h1>لا يوجد أي باحث عمل بعد. <%= link_to "سجل كباحث عمل", new_applicant_registration_path %></h1>
          </div>
    <%end%>

  </div>
