  <%= search_form_for @q, url: request.original_url do |f| %>

<div class="col-md-1"><p>بحث حسب:</p></div>
<div class="col-md-10">

<div class="col-md-2">
  <%= f.select(:paid_account_true, [["الحسابات المدفوعة", "1"], ["الحسابات المجانية", "0"]], {include_blank: 'حالة الحساب'}, {:class =>'form-control'})%>
</div>

<div class="col-md-2">
      <%= f.search_field :city_cont, :class=>"form-control", :placeholder=>"المدينة" %>
</div>
<div class="col-md-2">
  <%= f.search_field :education_field_cont, :class=>"form-control", :placeholder=>"المجال" %>
</div>

<% if current_page?(home_fresh_graduate_applicants_path) %>

<div class="col-md-2 graduation">
  <%= f.search_field :education_graduation_year_cont, :class=>"form-control ", :placeholder=>"سنة التخرج" %>
</div>
<div class="col-md-2">
  <%= f.select(:sex_cont, [["للرجال", "male"], ["للسيدات", "female"], ["للرجال والسيدات", "both"] ], {include_blank: 'النوع'}, {:class =>'form-control'})%>
</div>

<%else %>
<div class="col-md-2">
  <%= f.select(:status_cont, [["خريج حديث", "fresh-graduate"], ["صاحب خبرة","experienced"]], {include_blank: 'الحالة'}, {:class =>'form-control job_condition'})%>
</div>

<div class="col-md-2 experience" style="display:none;">
  <%= f.search_field :experience_period_cont, :class=>"form-control ", :placeholder=>"سنوات الخبرة" %>
</div>

<div class="col-md-2 graduation" style="display:none;">
  <%= f.search_field :education_graduation_year_cont, :class=>"form-control ", :placeholder=>"سنة التخرج" %>
</div>

<%end%>

<div class="col-md-2">
  <%= f.search_field :skill_skill_or_experience_description_cont, :class=>"form-control", :placeholder=>"بحث متقدم" %>
</div>
</div>
<div class="col-md-1"><%= f.submit "بحث", :class => "btn btn-block has-effect  btn-danger" %></div>
<%end%>

<script type="text/javascript">
jQuery(document).ready(function($) {
  $('select.job_condition').change( function() {
    if ($(this).val() == "experienced") {
      $('.experience').show();
      $('.graduation').hide();
    }
  else if ($(this).val() == "fresh-graduate") {
    $('.experience').hide();
    $('.graduation').show();
  }
else {
  $('.experience').hide();
  $('.graduation').hide();
}

});
});
</script>
