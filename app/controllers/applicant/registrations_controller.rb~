class Applicant::RegistrationsController < Devise::RegistrationsController

  def new
  1.times { @applicant.education.build }
  1.times { @applicant.skill.build }
  end

  def configure_permitted_parameters
    devise_parameter_sanitizer.for(:sign_up) { |u| u.permit(:first_name, :second_name, :sex, :city, :email, :password, :phone, :birthday, :paid_account, :avatar , education_attributes: [:id, :degree, :field, :graduation_place, :graduation_year, :_destroy], experience_attributes:[:id, :title, :company, :period, :description, :_destroy], skills_attributes: [:id,:skill,:_destroy]) }
  end
end
